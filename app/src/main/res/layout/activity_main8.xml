<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edu.cqu.mysurvey.Main8Activity">

    <Button
        android:text="btn_to9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp" />

    <TextView
        android:text="8.Could you succeed to control the game time well in your plan?"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/rg_Q8"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:text="Always control well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_AWell" />

        <RadioButton
            android:text="Sometimes addictive, but can stop when it`s enough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_NoStop" />

        <RadioButton
            android:text="Lose control yourself everytime play games."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_loseControl" />

        <RadioButton
            android:text="Have no sense of time when in games. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_inGame" />

        <RadioButton
            android:text="More than 3 hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_noGames" />
    </RadioGroup>
</RelativeLayout>
