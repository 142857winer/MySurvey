<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edu.cqu.mysurvey.Main4Activity">

    <TextView
        android:text="4. How long time have you been playing network games?"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/textView4" />

    <RadioGroup
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/rg_Q4"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_to5">

        <RadioButton
            android:text="Never play network game "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_Never" />

        <RadioButton
            android:text="Just several months"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_months" />

        <RadioButton
            android:text="1 to 2 years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_years" />

        <RadioButton
            android:text="More than 2 years "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_MoreYears" />


    </RadioGroup>

    <Button
        android:text="btn_to5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="153dp" />
</RelativeLayout>
