<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edu.cqu.mysurvey.Main5Activity">

    <TextView
        android:text="11.Will you stick to playing network games after having a job and getting married? "
        android:gravity="center"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/textView11" />

    <RadioGroup
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/rg_Q11"
        android:layout_below="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp">

        <RadioButton
            android:text="No, you will put career and family first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_FCFirst" />

        <RadioButton
            android:text="Still play, but just play a little."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_little" />

        <RadioButton
            android:text="Will not change, even play more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_more" />

        <RadioButton
            android:text="Others "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_11Others" />


    </RadioGroup>

    <Button
        android:text="btn_to12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to12"
        android:layout_below="@+id/rg_Q11"
        android:layout_alignParentStart="true" />
</RelativeLayout>
