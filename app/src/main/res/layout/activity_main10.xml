<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edu.cqu.mysurvey.Main5Activity">

    <TextView
        android:text="10.How much is your dependence on network games? Could you give up these games?"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/textView10" />

    <RadioGroup
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/rg_Q10"
        android:layout_below="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp">

        <RadioButton
            android:text="Much addict in online games, it is impossible to quit."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_quit" />

        <RadioButton
            android:text="Although very difficult, but can make it because of strong self-control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_difficult" />

        <RadioButton
            android:text="It doesn`t matter, playing games just for fun."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_fun" />

        <RadioButton
            android:text="Do not play games."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_notGame" />


    </RadioGroup>

    <Button
        android:text="btn_to11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_to11"
        android:layout_below="@+id/rg_Q10"
        android:layout_alignParentStart="true" />
</RelativeLayout>
